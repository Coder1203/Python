t1 = turtle.Turtle()
t1.color('red')
t1.hideturtle()
t1.speed(10)
t1.pensize(4)

def draw_heart(hRadius, d):
    r = d / math.tan(math.radians(180 - hRadius / 2))
    t1.up()
    t1.goto(-320, 120)
    t1.seth(90 - (hRadius - 180))
    t1.down()
    t1.begin_fill()
    t1.fd(d)
    t1.circle(r, hRadius)
    t1.left(180)
    t1.circle(r, hRadius)
    t1.fd(d)
    t1.end_fill()
a = 220
j = -0.02
def animate():
    global a, j
    t1.clear()
    draw_heart(a, 100)
    screen.tracer(0, 0)
    screen.update()
    a += j
    if a < 215:
        j = -j
    elif a > 220:
        j = -j
    screen.ontimer(animate, 1)
animate()
turtle.Screen().exitonclick()

